<Window x:Class="RentOfEquipment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentOfEquipment"
        mc:Ignorable="d"
        Title="Главное окно" 
        Height="450" 
        Width="300"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txtMainMenu"
                   Text="Меню" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="25"
                   FontFamily="Franklin Gothic Demi"
                   Margin="0 10 0 0"
                   />

            <Button x:Name="btnMenuEmployee"
                    Margin="0 50 0 0"
                    Width="100"
                    Height="35"
                    Content="Окно сотрудника" Click="btnMenuEmployee_Click"/>

        </StackPanel>
    </Grid>
</Window>
